#!/bin/bash

SCRIPT_NAME=$(basename ${BASH_SOURCE[0]})
SCRIPT_DIR=$(dirname ${BASH_SOURCE[0]})

echo "#"
echo "# $SCRIPT_NAME"
echo "#"

grep -q $SCRIPT_NAME $SCRIPT_DIR/../log/setup.log
if [[ $? -eq 1 ]]; then
    source $SCRIPT_DIR/../conf/setup.conf

    if [[ $BUILD_JUST == true ]]; then
        source $SCRIPT_DIR/phase-build-just
    fi

    tar -C /opt -xzf $SCRIPT_DIR/../distr/just_mini-$JUST_VER-$DISTRO-x86_64.tar.gz
    if [[ $? -ne 0 ]]; then
        echo Failed to unpack just
        exit 1
    fi

    # TODO: on upgrade the link may already exist
    ln -s /opt/just_mini-$JUST_VER-$DISTRO-x86_64 /opt/just
    if [[ $? -ne 0 ]]; then
        echo Failed to ln just
        exit 1
    fi

    # create Just dirs
    mkdir -p $DATA_DIR/just $LOG_DIR/just
    if [[ $? -ne 0 ]]; then
        echo Failed to mkdir just
        exit 1
    fi

    cp -r /opt/just/data $DATA_DIR/just
    if [[ $? -ne 0 ]]; then
        echo Failed to copy just data
        exit 1
    fi

    cp -r /opt/just/log/* $LOG_DIR/just
    if [[ $? -ne 0 ]]; then
        echo Failed to copy just log
        exit 1
    fi

    rm -rf /opt/just/data
    if [[ $? -ne 0 ]]; then
        echo Failed to rm just data
        exit 1
    fi

    rm -rf /opt/just/log
    if [[ $? -ne 0 ]]; then
        echo Failed to rm just log
        exit 1
    fi

    ln -s $DATA_DIR/just/data /opt/just/data
    if [[ $? -ne 0 ]]; then
        echo Failed to ln just data
        exit 1
    fi

    ln -s $LOG_DIR/just /opt/just/log
    if [[ $? -ne 0 ]]; then
        echo Failed to ln just log
        exit 1
    fi

    # setup file system permissions
    chown $ALLEY_USER:$ALLEY_USER -R /opt/just_mini-$JUST_VER-$DISTRO-x86_64 /opt/just $DATA_DIR/just $LOG_DIR/just
    if [[ $? -ne 0 ]]; then
        echo Failed to chown just
        exit 1
    fi

    echo $SCRIPT_NAME >> $SCRIPT_DIR/../log/setup.log
    echo "DONE"
else
    echo "SKIPPED"
fi
